<!DOCTYPE html>
<html lang="{{ layout.locale }}" xml:lang="{{ layout.locale }}">
  <head>
    <base href="%BASE_URL%" />
    {% include '../components/meta/meta.twig' %}
    {% block meta %}{% endblock %}
    <script type="module" src="/js/main.js"></script>
    <link rel="stylesheet" href="/theme/theme.css">
    {% if false %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    {% endif %}
    {% block head %}{% endblock %}
  </head>
  <body class="bg-white dark:bg-neutral-950 text-neutral-900 dark:text-white {% block body_class %}{% endblock %}">
    {% include '../components/header/header.twig' %}
    {% block main %}{% endblock %}
    {% include '../components/footer/footer.twig' %}
    {% block body %}{% endblock %}
