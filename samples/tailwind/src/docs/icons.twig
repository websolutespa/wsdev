{% extends '/templates/layouts/layout.twig' %}

{% block head %}
<link rel="stylesheet" href="/docs/docs.css">
<script type="module" src="/docs/docs.js"></script>
{% endblock %}

{% block main %}

<main>

  <section class="hero py-20">
    <div class="container mx-auto px-3">
      <h1 class="display-2 font-bold">Icons</h1>
      <div class="display-4">
        Svg sprite map generation with <a class="link" href="https://github.com/svg/svgo" target="_blank" title="Sharp.js">SVG Optimizer</a> tool for optimizing SVG vector graphics files.
      </div>
    </div>
  </section>

  {# icons #}
  <section class="theme py-16">
    <div class="container mx-auto px-3">
      <div class="theme__title">Sprite Map</div>
      <div class="theme__variants">
        <div class="theme__variant">
          <div class="theme__list theme__list--center" data-icons>
            <!-- icons generated by theme.js -->
          </div>
        </div>
      </div>
      <div class="theme__variants">
        <div class="theme__variant">
          <div class="theme__title">
            <p>You can write your svg with <em>use</em> <em>xlink:href</em> manually or use the <em>icon</em> template helper.</p>
          </div>
          <code>{% raw %}{{icon('websolute')}}{% endraw %}</code>
          <div class="theme__title">
            <p>will be converted to <em>svg</em> tag with correspondent <em>xlink:href</em>:</p>
          </div>
          <code>&lt;svg class=&quot;icon icon--websolute&quot; aria-hidden=&quot;true&quot; focusable=&quot;false&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot; xmlnsxlink=&quot;http://www.w3.org/1999/xlink&quot;&gt;
  &lt;use xlink:href=&quot;#icon-websolute&quot;&gt;&lt;/use&gt;
&lt;/svg&gt;</code>
        </div>
      </div>
    </div>
  </section>
</main>

{% endblock %}
