{% extends '/templates/layouts/layout.twig' %}

{% block head %}
<link rel="stylesheet" href="/docs/theme.scss">
<script type="module" src="/docs/theme.js"></script>
{% endblock %}

{% block body_class %}theme{% endblock %}

{% block main %}
<main>

  <section class="hero py-80">
    <div class="container">
      <h1 class="display20 fw-700">ws-app</h1>
      <div class="display40">
        a reactive component library by Websolute
      </div>
    </div>
  </section>

  <div class="contacts" data-contacts>
    <div class="container" data-if="success">
      Richiesta inviata
    </div>
    <div class="container" data-if="!success">
      <form class="form" name="form" role="form" novalidate autocomplete="off" action="#">
        <div class="form__fields">
          <div class="control--checkfield" data-control-checkfield data-field="checkField">
            <input type="text" value="" name="checkField">
          </div>
          <div class="control" data-control-text data-field="firstName">
            <label class="control__label" for="firstName">
              Nome <span class="control__required">*</span>
            </label>
            <div class="control__field">
              <input class="control__input" type="text" placeholder="Nome" id="firstName">
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control" data-control-text data-field="lastName">
            <label class="control__label" for="lastName">
              Cognome <span class="control__required">*</span>
            </label>
            <div class="control__field">
              <input class="control__input" type="text" placeholder="Cognome" id="lastName">
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control" data-control-text data-field="email">
            <label class="control__label" for="email">
              Email <span class="control__required">*</span>
            </label>
            <div class="control__field">
              <input class="control__input" type="text" placeholder="Email" id="email">
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control" data-control-text data-field="telephone">
            <label class="control__label" for="telephone">
              Telefono <span class="control__required">*</span>
            </label>
            <div class="control__field">
              <input class="control__input" type="text" placeholder="Telefono" id="telephone">
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control" data-control-text data-field="job">
            <label class="control__label" for="job">
              Professione <span class="control__required">*</span>
            </label>
            <div class="control__field">
              <input class="control__input" type="text" placeholder="Professione" id="job">
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control" data-control-text data-field="company">
            <label class="control__label" for="company">
              Azienda <span class="control__required">*</span>
            </label>
            <div class="control__field">
              <input class="control__input" type="text" placeholder="Azienda" id="company">
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control" data-control-text data-field="city">
            <label class="control__label" for="city">
              Città <span class="control__required">*</span>
            </label>
            <div class="control__field">
              <input class="control__input" type="text" placeholder="Città" id="city">
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control" data-control-select data-field="country">
            <label class="control__label" for="country">
              Paese <span class="control__required">*</span>
            </label>
            <div class="control__field control__field--select">
              <select class="control__select" name="country" id="country">
                <option value="" disabled selected>Paese</option>
                <option value="1">Option 1</option>
                <option value="2">Option 2</option>
                <option value="3">Option 3</option>
              </select>
              {{icon('caret-down')}}
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control" data-control-select data-field="requestType">
            <label class="control__label" for="requestType">
              Motivo <span class="control__required">*</span>
            </label>
            <div class="control__field control__field--select">
              <select class="control__select" name="requestType" id="requestType">
                <option value="" disabled selected>Motivo</option>
                <option value="1">Option 1</option>
                <option value="2">Option 2</option>
                <option value="3">Option 3</option>
              </select>
              {{icon('caret-down')}}
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control" data-control-textarea data-field="message">
            <label class="control__label" for="message">
              Messaggio <span class="control__required">*</span>
            </label>
            <div class="control__field control__field--textarea">
              <textarea class="control__textarea" rows="4" placeholder="Messaggio" id="message"></textarea>
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="form__spacer"></div>
          <div class="control control--full" data-control-checkbox data-field="privacy">
            <div class="control__field--checkbox">
              <input class="control__input" type="checkbox" value="true" id="privacy">
              <label class="control__label" for="privacy">
                {{icon('checkbox')}}
                {{icon('checkbox-checked')}}
                <span>Dichiaro di aver letto l'<a href="/it/en/privacy-policy" target="_blank">informativa</a> e acconsento al trattamento dei dati</span>
                <span class="control__required">*</span>
              </label>
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control control--full" data-control-privacy data-field="newsletter">
            <div class="control__field--privacy">
              <div class="control__radios">
                <input class="control__input" type="radio" value="true" id="newsletter_true" name="newsletter">
                <label class="control__label" for="newsletter_true">
                  {{icon('checkbox')}}
                  {{icon('checkbox-checked')}}
                  <span>Acconsento</span>
                </label>
                <input class="control__input" type="radio" value="false" id="newsletter_false" name="newsletter">
                <label class="control__label" for="newsletter_false">
                  {{icon('checkbox')}}
                  {{icon('checkbox-checked')}}
                  <span>Non acconsento</span>
                </label>
              </div>
              <div class="control__description">
                <span>Al trattamento dei miei dati personali per attività di marketing diretto mediante l'iscrizione alla newsletter.</span>
                <span class="control__required">*</span>
              </div>
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control control--full" data-control-privacy data-field="commercial">
            <div class="control__field--privacy">
              <div class="control__radios">
                <input class="control__input" type="radio" value="true" id="commercial_true" name="commercial">
                <label class="control__label" for="commercial_true">
                  {{icon('checkbox')}}
                  {{icon('checkbox-checked')}}
                  <span>Acconsento</span>
                </label>
                <input class="control__input" type="radio" value="false" id="commercial_false" name="commercial">
                <label class="control__label" for="commercial_false">
                  {{icon('checkbox')}}
                  {{icon('checkbox-checked')}}
                  <span>Non acconsento</span>
                </label>
              </div>
              <div class="control__description">
                <span>Al trattamento dei miei dati personali per attività di profilazione, al fine di ricevere comunicazioni commerciali più vicine ai miei interessi.</span>
                <span class="control__required">*</span>
              </div>
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
          <div class="control control--full" data-control-privacy data-field="promotion">
            <div class="control__field--privacy">
              <div class="control__radios">
                <input class="control__input" type="radio" value="true" id="promotion_true" name="promotion">
                <label class="control__label" for="promotion_true">
                  {{icon('checkbox')}}
                  {{icon('checkbox-checked')}}
                  <span>Acconsento</span>
                </label>
                <input class="control__input" type="radio" value="false" id="promotion_false" name="promotion">
                <label class="control__label" for="promotion_false">
                  {{icon('checkbox')}}
                  {{icon('checkbox-checked')}}
                  <span>Non acconsento</span>
                </label>
              </div>
              <div class="control__description">
                <span>Al trasferimento dei miei dati personali per attività promozionali da parte di terzi. I dati saranno trasferiti esclusivamente a società facenti parte del Gruppo.</span>
                <span class="control__required">*</span>
              </div>
            </div>
            <div class="control__errors">
              <div class="required">Il campo è obbligatorio</div>
              <div class="email">Email non valida</div>
              <div class="match">I campi non corrispondono</div>
            </div>
          </div>
        </div>
        <div class="form__cta">
          <button type="submit" class="btn--submit" data-title="Invia">
            <span>Invia la tua richiesta</span>
          </button>
        </div>
        <div class="form__test" data-test></div>
      </form>
    </div>
  </div>

  <div class="guide">
    <div class="container">
      <div class="guide__title">data-html</div>
      <div class="guide__abstract">The data-html attribute evaluate an expression in the innerHTML property of the html element.</div>
      <div>Input</div>
      <code data-text="`<div data-html='item.title'>`"></code>
      <div>Output</div>
      <code data-text="`<div>${item.title}</div>`"></code>
      <div>Item</div>
      <code data-text="item | json"></code>
      <button type="button" class="guide__btn" data-event="randomize">randomize</button>
    </div>
  </div>

  <div class="guide">
    <div class="container">
      <div class="guide__title">data-text</div>
      <div class="guide__abstract">The data-text attribute evaluate an expression in the innerText property of the html element.</div>
      <div>Input</div>
      <code data-text="`<div data-text='item.title'>`"></code>
      <div>Output</div>
      <code data-text="`<div>${item.title}</div>`"></code>
      <div>Item</div>
      <code data-text="item | json"></code>
      <button type="button" class="guide__btn" data-event="randomize">randomize</button>
    </div>
  </div>

  <div class="guide" data-attr="{ id: item.id, title: item.title }">
    <div class="container">
      <div class="guide__title">data-attr</div>
      <div class="guide__abstract">The data-attr attribute adds reactively attributes to the html element.</div>
      <div>Input</div>
      <code data-text="`<div data-attr='{ id: item.id, title: item.title }'>`"></code>
      <div>Output</div>
      <code data-text="`<div id='${item.id}' title='${item.title}'></div>`"></code>
      <div>Item</div>
      <code data-text="item | json"></code>
      <button type="button" class="guide__btn" data-event="randomize">randomize</button>
    </div>
  </div>

  <div class="guide">
    <div class="container">
      <div class="guide__title">data-class</div>
      <div class="guide__abstract">The data-class attribute adds reactively classes to the html element.</div>
      <div>Input</div>
      <code data-text="`<div data-class='{ red: items.length % 2 == 0, green: items.length % 2 != 0 }'>`"></code>
      <div>Output</div>
      <code data-text="`<div data-class='${ items.length % 2 == 0 ? 'red' : 'green'}'>`"></code>
      <div>Items</div>
      <code data-text="`Array(${items.length})`"></code>
      <div data-class="{ red: items.length % 2 == 0, green: items.length % 2 != 0 }">
        <span data-html="items.length"></span> is <span data-html="(items.length % 2 == 0) ? 'red' : 'green'"></span>
      </div>
      <button type="button" class="guide__btn" data-event="randomize">randomize</button>
    </div>
  </div>

  <div class="guide">
    <div class="container">
      <div class="guide__title">data-style</div>
      <div class="guide__abstract">The data-style attribute adds reactively style to the html element.</div>
      <div>Input</div>
      <code data-text="`<div data-style='{ color: items.length % 2 == 0 ? \'yellow\' : \'blue\' }'>`"></code>
      <div>Output</div>
      <code data-text="`<div style='color: ${items.length % 2 == 0 ? 'yellow' : 'blue'};'>`"></code>
      <div>Items</div>
      <code data-text="`Array(${items.length})`"></code>
      <div class="guide__abstract" data-style="{ color: items.length % 2 == 0 ? 'yellow' : 'blue' }">
        <span data-html="items.length"></span> is <span data-html="(items.length % 2 == 0) ? 'yellow' : 'blue'"></span>
      </div>
      <button type="button" class="guide__btn" data-event="randomize">randomize</button>
    </div>
  </div>

  <div class="guide">
    <div class="container">
      <div class="guide__title">data-event</div>
      <div class="guide__abstract">The data-event attribute adds reactively an event to the html element.</div>
      <div>Event</div>
      <code data-text="`<button data-event='alert'>send</button>`"></code>
      <div>Listen for events</div>
      <code data-text="`EventService.bubble$(node).subscribe(event => alert(event.type))`"></code>
      <button type="button" class="guide__btn" data-event='alert'>send</button>
      <div>Known events</div>
      <div class="guide__abstract">A list of known events binded to the data-{event} attribute:<br><em>click</em>, <em>dblclick</em>, <em>mouseover</em>, <em>mouseout</em>, <em>mouseenter</em>, <em>mouseleave</em>, <em>mousedown</em>, <em>mouseup</em>, <em>mousemove</em>, <em>contextmenu</em>, <em>touchstart</em>, <em>touchmove</em>, <em>touchend</em>, <em>keydown</em>, <em>keyup</em>, <em>input</em>, <em>change</em>, <em>loaded</em>.</div>
      <div>Examples</div>
      <code data-text="`<button data-click='alert(item.title)'>click</button>`"></code>
      <button type="button" class="guide__btn" data-click="alert(item.title)">click</button>
      <code data-text="`<button data-mouseover='alert(item.title)'>hover</button>`"></code>
      <button type="button" class="guide__btn" data-mouseover="alert(item.title)">hover</button>
      <div>Item</div>
      <code data-text="item | json"></code>
    </div>
  </div>

  <div class="guide">
    <div class="container">
      <div class="guide__title">data-if</div>
      <div class="guide__abstract">The data-if attribute adds or removes reactively the html element from the dom.</div>
      <div>Input</div>
      <code data-text="`<span data-if='items.length % 2 == 0'>pair</span>`"></code>
      <div>Output</div>
      <code data-text="`${items.length % 2 == 0 ? '<span>pair</span>' : 'none'}`"></code>
      <div>Items</div>
      <code data-text="`Array(${items.length})`"></code>
      <div>
        <span data-html="items.length"></span> is <span data-if="items.length % 2 == 0">pair</span> <span data-if="items.length % 2 != 0">odd</span>
      </div>
      <button type="button" class="guide__btn" data-event="randomize">randomize</button>
    </div>
  </div>

  <div class="guide">
    <div class="container">
      <div class="guide__title">data-for</div>
      <div class="guide__abstract">The data-for attribute creates a repeater that reactively adds or removes html elements from the dom.</div>
      <div>Input</div>
      <code data-text="`<div data-for='let x of items'><div data-html='x.name'></div></div>`"></code>
      <div>Output</div>
      <code data-text="`${items.slice(0, 2).map(x => '<div>' + x.name + '</div>').join('')}...`"></code>
      <div class="guide__items">
        <div class="guide__item" data-class="{ active: x.id == item.id }" data-attr="{ title: x.title, id: item.id }" data-click="doSelect(x)" data-for="let x of items">
          <div data-html="x.name"></div>
        </div>
      </div>
      <div>Item</div>
      <code data-text="item | json"></code>
      <button type="button" class="guide__btn" data-event="randomize">randomize</button>
    </div>
  </div>

  <div class="guide" data-lazy-component>
    <div class="container">
      <div class="guide__time"></div>
      <div class="guide__title">I'm a lazy loaded component</div>
    </div>
  </div>

  <div class="guide" data-lazy-module>
    <div class="container">
      <div data-lazy-module-component>
        <div class="guide__time"></div>
        <div class="guide__title">I'm a lazy loaded module</div>
      </div>
    </div>
  </div>

  <div class="guide">
    <div class="container">
      <div class="guide__title">Modals</div>
      <button type="button" class="guide__btn" data-event="modal">open modal</button>
    </div>
  </div>

</main>
{% endblock %}
