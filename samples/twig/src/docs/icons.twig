{% extends '/templates/layouts/layout.twig' %}

{% block head %}
<link rel="stylesheet" href="/docs/theme.scss">
<script type="module" src="/docs/theme.js"></script>
{% endblock %}

{% block main %}

<main>

  <section class="hero py-80">
    <div class="container">
      <h1 class="display20 fw-700">Icons</h1>
      <div class="display40">
        Svg sprite map generation with <a class="link" href="https://github.com/svg/svgo" target="_blank" title="Sharp.js">SVG Optimizer</a> tool for optimizing SVG vector graphics files.
      </div>
    </div>
  </section>

  {# icons #}
  <section class="theme py-64">
    <div class="container">
      <div class="theme__title">Sprite Map</div>
      <div class="theme__variants">
        <div class="theme__variant">
          <div class="theme__list theme__list--center" data-icons>
            <!-- icons generated by theme.js -->
          </div>
          <div class="theme__name">template helper</div>
          <code>&#123;&#123;icon('websolute')&#125;&#125;</code>
        </div>
      </div>
    </div>
  </section>
</main>

{% endblock %}
