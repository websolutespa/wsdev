root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.sh]
end_of_line = lf

[{*.yml,*.yaml,package.json,package-lock.json}]
indent_style = space
indent_size = 2
tab_width = 4
end_of_line = crlf
