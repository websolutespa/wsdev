{
  "$schema": "./theme.schema.json",
  "breakpoint": {
    "xs": 0,
    "sm": "768px",
    "md": "1024px",
    "lg": "1440px",
    "xl": "1600px"
  },
  "color": {
    "neutral": {
      "100": "#fafafa",
      "200": "#d7d6d6",
      "300": "#b6b4b4",
      "400": "#8d8b8b",
      "500": "#7c7a79",
      "600": "#484747",
      "700": "#3b3b3a",
      "800": "#313030",
      "900": "#121212"
    },
    "primary": {
      "100": "#def2ff",
      "200": "#b6e7ff",
      "300": "#75d5ff",
      "400": "#2cc1ff",
      "500": "#00a2ed",
      "600": "#0087d4",
      "700": "#006bab",
      "800": "#005a8d",
      "900": "#064b74"
    }
  },
  "container": {
    "default": {
      "maxWidth": {
        "xs": "calc(100% - var(--grid-column-gap) * 2)",
        "sm": "calc(100% - var(--grid-column-gap) * 2)",
        "md": "calc(1024px - var(--grid-column-gap) * 2)",
        "lg": "calc(1440px - var(--grid-column-gap) * 2)",
        "xl": "calc(1600px - var(--grid-column-gap) * 2)"
      }
    },
    "fluid": {
      "maxWidth": "calc(100% - var(--grid-column-gap) * 2)"
    }
  },
  "grid": {
    "default": {
      "columns": 12,
      "columnGap": {
        "xs": "Max(4vw, Min(48px, calc(100vw / 24)))",
        "sm": "Max(4vw, Min(60px, calc(100vw / 24)))",
        "md": "Max(4vw, Min(72px, calc(100vw / 24)))",
        "lg": "Max(4vw, Min(84px, calc(100vw / 24)))",
        "xl": "Max(4vw, Min(96px, calc(100vw / 24)))"
      },
      "rowGap": 0
    }
  },
  "margin": {
    "default": [
      4,
      8,
      12,
      16,
      24,
      32,
      [ 32, 40 ],
      [ 40, 48 ],
      [ 48, 64 ],
      [ 64, 80 ],
      [ 80, 96 ],
      [ 96, 128 ],
      [ 128, 160 ]
    ]
  },
  "padding": {
    "default": [
      4,
      8,
      12,
      16,
      24,
      32,
      [ 32, 40 ],
      [ 40, 48 ],
      [ 48, 64 ],
      [ 64, 80 ],
      [ 80, 96 ],
      [ 96, 128 ],
      [ 128, 160 ]
    ]
  },
  "typography": {
    "default": {
      "fontFamily": "Inter, -apple-system, 'Helvetica Neue', 'Segoe UI', Roboto, Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji'",
      "fontSize": {
        "xs": "14px",
        "sm": "15px",
        "md": "15px",
        "lg": "16px",
        "xl": "16px"
      },
      "lineHeight": 1.5
    },
    "display10": {
      "fontSize": "Min(8rem, 20vw)",
      "lineHeight": 1.05
    },
    "heading10": {
      "fontSize": "Min(2.5rem, 6.4vw)",
      "lineHeight": 1.45
    }
  }
}
