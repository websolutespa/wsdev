{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": { },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": [
        "^preview"
      ]
    },
    "generate": {
      "outputs": [ "dist/**" ]
    }
  },
  "globalEnv": [
    "NODE_ENV"
  ]
}
